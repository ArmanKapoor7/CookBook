<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneverification"
    style="@style/transparent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="108dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/cookbook"
        android:transitionName="logoname" />

    <ImageView
        android:layout_width="163dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/cookb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="Verify PhoneNo."
        android:textAlignment="center"
        android:textSize="30sp"
        android:transitionName="logotext"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:layout_gravity="center"
        android:text="Enter Verification code if not automatically authenticated."
        android:textSize="15sp"
        android:transitionName="signintext"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:hint="Enter OTP"
        android:id="@+id/verification_code_entered_by_user" />

    <Button
        android:id="@+id/verifybtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#e2d1c3"/>

    <Button
        android:id="@+id/resendbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#e2d1c3"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/amarante"
        android:layout_gravity="center"
        android:text="Resend OTP button will automatically appear after 30 seconds."
        android:textSize="15sp"
        android:transitionName="signintext"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/screentext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal"
            android:text="@string/a_virtual_recepie_book"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>