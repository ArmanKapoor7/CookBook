<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8DCF8B"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="@string/time_to_feast_on"
        android:textColor="#154C8A"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_breakfast"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="252dp"
        android:background="#9AA2AB"
        android:fontFamily="@font/amarante"
        android:onClick="breakfast"
        android:text="@string/breakfast"
        android:textAlignment="center"
        android:textColor="#154C8A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_lunch"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="352dp"
        android:background="#9AA2AB"
        android:fontFamily="@font/amarante"
        android:onClick="lunch"
        android:text="@string/lunch"
        android:textAlignment="center"
        android:textColor="#154C8A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dinner"
        android:layout_width="155dp"
        android:layout_height="41dp"
        android:layout_marginTop="452dp"
        android:background="#9AA2AB"
        android:fontFamily="@font/amarante"
        android:onClick="dinner"
        android:text="@string/dinner"
        android:textAlignment="center"
        android:textColor="#154C8A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>